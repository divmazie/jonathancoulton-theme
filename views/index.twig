{% extends "base.twig" %}

{% block content %}
	<div class="col-xs-12">
		<div data-slick='{"slidesToShow": 4, "slidesToScroll": 1}' class="slick-element showcase_tiles">
			{% for tile in showcase_tiles %}
				<div class="showcase_tile">
					<a href="{{ tile.tile_link }}">
						<div class="joco-promo" style="
								{% if tile.background_color %}background-color: {{ tile.background_color }};{% endif %}
								{% if tile.bottom_border_color %}border-bottom: solid 10px {{ tile.bottom_border_color }};{% endif %}
								">
							{% if tile.thumbnail %}
								<img src="{{ tile.thumbnail.src }}" class="promo-image" />
							{% else %}
								<h2>{{ tile.title }}</h2>
								<p>{{ tile.post_content }}</p>
							{% endif %}
						</div>
					</a>
				</div>
			{% endfor %}
		</div>
	</div>
	<div class="col-xs-12 col-sm-8">
		{% include 'full_article.twig' %}
	</div>
	<div class="hidden-xs col-sm-4">
		<div>
			{% if twitter.tweets %}
				{% for tweet in twitter.tweets %}
					<div class="tweet_text">{{ tweet.text }}</div>
					<a href="{{ tweet.url }}" target="_blank" class="tweet_link">{{ tweet.ago }} ago</a> <br />
				{% endfor %}
				<a href="{{ twitter.url }}" target="_blank" class="twitter_link">@{{ twitter.handle }}</a>
			{% endif %}
		</div>
		<!--<div><script type="text/javascript" src="https://cashmusic.org/public/cashmusic.js"></script><script type="text/javascript"> window.cashmusic.embed('https://cashmusic.org/public','6959');</script></div>-->
		<div>Social media links</div>
	</div>
	<div class="clearfix"></div>
{% endblock %}