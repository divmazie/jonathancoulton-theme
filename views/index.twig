{% extends "base.twig" %}

{% block content %}
	<div class="container top_content">
		<div class="col-xs-12">
			<div data-slick='{"slidesToShow": 4, "slidesToScroll": 1}' class="slick-element showcase_tiles">
				{% for tile in showcase_tiles %}
					<div class="showcase_tile">
						{% if tile.tile_link %}<a href="{{ tile.tile_link }}">{% endif %}
							<div class="joco-promo" style="
									{% if tile.background_color %}background-color: {{ tile.background_color }};{% endif %}
									{% if tile.bottom_border_color %}border-bottom: solid 10px {{ tile.bottom_border_color }};{% endif %}
									">
								{% if tile.thumbnail %}
									<img src="{{ tile.thumbnail.src }}" class="promo-image" />
								{% else %}
									<div class="promo-text">
										<h2 class="{{ tile.header_font }}"{% if tile.header_color %} style="color: {{ tile.header_color }}"{% endif %}>{{ tile.title }}</h2>
										<p class="{{ tile.body_font }}"{% if tile.body_color %} style="color: {{ tile.body_color }}"{% endif %}>{{ tile.post_content }}</p>
									</div>
								{% endif %}
							</div>
						{% if tile.tile_link %}</a>{% endif %}
					</div>
				{% endfor %}
			</div>
		</div>
		<div class="col-xs-12 col-sm-8">
			{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
		</div>
		<div class="hidden-xs col-sm-4">
			<div class="side_box twitter">
				<h4>Previously, on Twitter</h4>
				{% if twitter.tweets %}
					{% for tweet in twitter.tweets %}
						<div class="tweet_text">{{ tweet.text }}</div>
						<a href="{{ tweet.url }}" target="_blank" class="tweet_link">{{ tweet.ago }} ago</a>
					{% endfor %}
					<a href="{{ twitter.url }}" target="_blank" class="twitter_link">@{{ twitter.handle }}</a>
				{% endif %}
			</div>
			<div class="side_box instagram">
				<h4>On Instagram</h4>
				[content]
			</div>
			<!--<div><script type="text/javascript" src="https://cashmusic.org/public/cashmusic.js"></script><script type="text/javascript"> window.cashmusic.embed('https://cashmusic.org/public','6959');</script></div>-->
			<div class="side_box social_media">
				<h4>Follow Jonathan</h4>
				{% if twitter.url %}<a href="{{ twitter.url }}" target="_blank">Twitter</a>{% endif %}
				{% if instagram_handle %}<a href="https://instagram.com/{{ instagram_handle }}" target="_blank">Instagram</a>{% endif %}
				{% if facebook_link %}<a href="{{ facebook_link }}" target="_blank">Facebook</a>{% endif %}
			</div>
		</div>
		<div class="clearfix"></div>
	</div>
	<div class="light_content">
		<div class="container">
			<h1>{{ blurb_header }}</h1>
			<p>{{ blurb_content }}</p>
		</div>
	</div>
	<div>
		<div class="container">
			<h2>Recent releases</h2>
		</div>
	</div>
	<div class="light_content">
		<div class="container">
			<h2>Upcoming shows</h2>
			{% for show in bandsintown|slice(0,6) %}
				<div class="col-sm-2 col-sm-offset-1"><a href="{{ show.url }}">{{ show.datetime|date("M j") }}</a></div>
				<div class="col-sm-6"><a href="{{ show.venue.url }}">
					<!--Cute way of adding an "I'm feeling lucky" link for the venue: <a href="http://www.google.com/search?q={{ show.venue.name|url_encode }}+{{ show.venue.city|url_encode }}+{{ show.venue.region|url_encode }}&btnI=1">-->
						{{ show.venue.name }}<br />{{ show.venue.city }}, {{ show.venue.region }}</a></div>
				<div class="col-xs-2"><a href="{{ show.ticket_url }}">Tickets {{ show.ticket_status }}</a> </div>
			{% endfor %}
		</div>
	</div>
{% endblock %}