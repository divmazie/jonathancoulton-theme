<article class="article tease tease-{{post.post_type}}" id="tease-{{post.ID}}">
	{% block content %}
		<h2 class="h2"><a href="{{post.link}}">{{post.title}}</a></h2>
		<p>{{post.get_preview}}</p>
		{% if post.get_thumbnail %}
			<img src="{{post.thumbnail.src}}" />
		{% endif %}
	{% endblock %}
	<div style="float: right">
		<a href="{{ site.url }}/news" class="no_underline"><div class="blue_arrow_right">Click for more news</div></a>
	</div>
	<div class="clearfix"></div>
</article>