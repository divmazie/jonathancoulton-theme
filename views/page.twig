{% extends "base.twig" %}

{% block content %}
	<div class="container">
		<div class="col-sm-12">
			<article class="post-type-{{post.post_type}} article" id="post-{{post.ID}}">
				<section class="article-content">
					<h1 class="article-h1">{{post.title}}</h1>
					<div class="article-body">
						{{post.content}}
					</div>
				</section>
			</article>
		</div>
	</div><!-- /container -->
{% endblock %}