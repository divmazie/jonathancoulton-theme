{% extends "base.twig" %}

{% block content %}
	<div class="container">
		<div class="col-sm-12">
			<article class="post-type-{{post.post_type}} article" id="post-{{post.ID}}">
				<section class="article-content">
					<h1 class="article-h1 post_header">{{post.title}}</h1>
					{% for faq in faqs %}
						{% if faq.faq_is_header %}
							<div class="faq_section_link">
								<a href="#{{ faq.slug }}">{{ faq.title }}</a>
							</div>
						{% else %}
							<div class="faq_question_link">
								<a href="#{{ faq.slug }}">{{ faq.title }}</a>
							</div>
						{% endif %}
					{% endfor %}
					{% for faq in faqs %}
						<a class="anchor" id="{{ faq.slug }}"></a>
						{% if faq.faq_is_header %}
							<h2 class="faq_section_title">{{ faq.title }}</h2>
						{% else %}
							<h3 class="faq_question">{{ faq.title }}</h3>
							<div class="faq_answer">{{ faq.content }}</div>
						{% endif %}
					{% endfor %}
				</section>
			</article>
		</div>
	</div><!-- /container -->
{% endblock %}